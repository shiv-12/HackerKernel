<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/lin"
    android:orientation="vertical"
    android:background="@drawable/backgroundd"
    tools:context=".home">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">
     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Karma Drives"
         android:textSize="20sp"
         android:layout_gravity="center_vertical"
         android:textColor="#ffffff"

         android:fontFamily="@font/open_sans_semibold"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:onClick="my_drives"
            android:layout_gravity="center_vertical"
            android:background="@drawable/edittext"
            android:text="my drives"
          android:paddingRight="15dp"
            android:fontFamily="@font/open_sans_semibold"
            android:layout_marginLeft="37dp"
            android:paddingLeft="15dp"/>


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:transitionName="imagee"
            android:layout_marginLeft="15dp"
            android:src="@drawable/profile"
            app:civ_border_color="#ffffff"
            app:civ_border_width="1dp" />
    </LinearLayout>

    <SearchView
        android:layout_width="330dp"
        android:layout_height="wrap_content"
       android:layout_gravity="center_horizontal"
        android:background="@drawable/edittext"
        android:queryHint="search here"
        android:id="@+id/searchbar"
        android:layout_marginTop="20dp"
        android:iconifiedByDefault="false"

        />



<ScrollView
    android:layout_width="300dp"
    android:layout_height="match_parent"
    android:layout_marginBottom="20dp"
    android:layout_marginTop="40dp"
    android:layout_gravity="center_horizontal">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="320dp"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="300dp"
            android:layout_height="250dp"
            app:cardCornerRadius="18dp"
            android:elevation="50dp"
            android:layout_gravity="center_horizontal"

            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/china"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="300dp"
            android:layout_marginTop="25dp"
            android:layout_height="250dp"
            app:cardCornerRadius="30dp"
            android:layout_gravity="center_horizontal"

            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/crist"/>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="300dp"
            android:layout_marginTop="25dp"
            android:layout_height="250dp"
            app:cardCornerRadius="30dp"
            android:layout_gravity="center_horizontal"

            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/india"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="300dp"
            android:layout_marginTop="25dp"
            android:layout_height="250dp"
            app:cardCornerRadius="30dp"
            android:layout_gravity="center_horizontal"

            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/jorden"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="300dp"
            android:layout_marginTop="25dp"
            android:layout_height="250dp"
            app:cardCornerRadius="30dp"
            android:layout_gravity="center_horizontal"

            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/mexico"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="300dp"
            android:layout_marginTop="25dp"
            android:layout_height="250dp"
            app:cardCornerRadius="30dp"
            android:layout_gravity="center_horizontal"

            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/peru"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="300dp"
            android:layout_marginTop="25dp"
            android:layout_height="250dp"
            app:cardCornerRadius="30dp"
            android:layout_gravity="center_horizontal"

            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/rome"/>

        </androidx.cardview.widget.CardView>






    </LinearLayout>

</ScrollView>



</LinearLayout>






